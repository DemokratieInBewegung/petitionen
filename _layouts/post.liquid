<div class="container-fluid outerbox no-gutters">
	<div class="row no-gutters">
		<div class="col-sm-9">
      <div class="row dib-nav">
          <div class="col-sm-2 offset-1">
              <a href="https://bewegung.jetzt"><img src="/static/img/logo-white.png" alt="DiB Logo" /></a>
          </div>
      </div>
      <header>
				<div class="header-image" style="background-image: url({{image}})"></div>

				<div class="row header-title">
	          <div class="col-sm-10 offset-1">
							<h1>{{ title }}</h1>
						</div>
				</div>
			</header>

			<div class="row">
				<div class="col-sm-10 offset-1 inner">
				    {{content}}
				</div>
			</div>
		</div>
			<div class="col-sm-3 sidebar">
				<h3 class="title">Unterzeichne jetzt!</h3>
				<div class="recipient">
					<strong class="name">An: {{recipient}}</strong>
					<p class="demand">{{demand}}</p>
				</div>

				<div class="counter">
					<strong class="currently text-muted">{{currently}} Unterschriften</strong>

					<div class="progress">
					  <div class="progress-bar" role="progressbar"
					  		style="width: {{percent}}%" aria-valuenow="percent" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<div class="text-right">
						<span class="total">noch {{total|minus:currently}} bis {{total}}</span>
					</div>
				</div>
				<div class="sign-form">

					<form action="https://eu2.cleverreach.com/f/{{cleverreach_id}}/wcs/" method="post" target="_blank">
						<div class="container">
							<div class="row">
								<input class="col-sm-6" name="1157321" placeholder="Vorname" type="text" value=""  />
								<input class="col-sm-6" name="1157322" placeholder="Nachname" type="text" value=""  />
							</div>
							<div class="row">
								<input class="col-sm-4" name="1157299" placeholder="PLZ" type="text"  value=""  />
								<input class="col-sm-8" name="1157299" placeholder="Stadt" type="text"  value=""  />
							</div>
							<div class="row">
								<input class="col-sm-12"Â name="email" placeholder="E-Mail" type="email"  value=""   />
							</div>
							<div class="row">
								<button class="col-sm-12 btn" type="submit">Unterzeichnen</button>
						</div>
						</div>
					</form>
				</div>
		</div>
	</div>

	<div class="row no-gutters">
		<div class="col-sm-9 footer">
			<div class="row">
				<div class="col-sm-10 offset-1">
		  		{% include '_layouts/_footer.liquid' %}
		  	</div>
  		</div>
		</div>
	</div>
</div>